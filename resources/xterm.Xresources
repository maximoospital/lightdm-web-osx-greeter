! XTerm configuration for lightdm-web-osx-greeter

! Font
XTerm*faceName:         DejaVu Sans Mono
XTerm*faceSize:         13
XTerm*boldMode:         true
XTerm*renderFont:       true

! Window
XTerm*internalBorder:   8
XTerm*scrollBar:        false
XTerm*saveLines:        10000

! Unicode
XTerm*utf8:             1
XTerm*locale:           true

! Input
XTerm*metaSendsEscape:  true
XTerm*eightBitInput:    false
XTerm*altIsNotMeta:     false

! Colors â€” VS Code Dark+ palette
XTerm*background:       #1e1e1e
XTerm*foreground:       #d4d4d4
XTerm*cursorColor:      #d4d4d4
XTerm*pointerColor:     #d4d4d4
XTerm*highlightColor:   #264f78
XTerm*highlightTextColor: #d4d4d4

! Black
